import { Button, VerticalBox } from "std-widgets.slint";

component MenuItem inherits Rectangle {
    in property <string> text;
    callback clicked <=> touch.clicked;
    height: 30px;
    border-radius: 4px;
    background: touch.has-hover ? #ffffff10 : #0000;
    animate background { duration: 150ms; }

    HorizontalLayout {
        padding-left: 8px;
        padding-right: 8px;
        Text {
            text: root.text;
            color: touch.has-hover ? #fff : #94a3b8;
            vertical-alignment: center;
            font-size: 14px;
            animate color { duration: 150ms; }
        }
    }

    touch := TouchArea { }
}

